# Run ElasticSearch as this user ID and group ID
<% if scope.lookupvar('elasticsearch::params::es_user') != '' -%>
    ES_USER=<%= scope.lookupvar('elasticsearch::params::es_user') %>
<% end -%>
<% if scope.lookupvar('elasticsearch::params::es_group') != '' -%>
    ES_GROUP=<%= scope.lookupvar('elasticsearch::params::es_group') %>
<% end -%>

# Heap Size (defaults to 256m min, 1g max)
<% if scope.lookupvar('elasticsearch::heap_size') != '' -%>
    ES_HEAP_SIZE=<%= scope.lookupvar('elasticsearch::heap_size') %>
<% end -%>

# Heap new generation
#ES_HEAP_NEWSIZE=

# max direct memory
#ES_DIRECT_SIZE=

# Maximum number of open files, defaults to 65535.
#MAX_OPEN_FILES=65535

# Maximum locked memory size. Set to "unlimited" if you use the
# bootstrap.mlockall option in elasticsearch.yml. You must also set
# ES_HEAP_SIZE.
#MAX_LOCKED_MEMORY=unlimited

# ElasticSearch log directory
#LOG_DIR=/var/log/elasticsearch

# ElasticSearch data directory
#DATA_DIR=/var/lib/elasticsearch

# ElasticSearch work directory
#WORK_DIR=/tmp/elasticsearch

# ElasticSearch configuration directory
<% if scope.lookupvar('elasticsearch::params::config_dir') != '' -%>
    CONF_DIR=<%= scope.lookupvar('elasticsearch::params::config_dir') %>
<% end -%>

# ElasticSearch configuration file (elasticsearch.yml)
<% if scope.lookupvar('elasticsearch::params::config_file') != '' -%>
    CONF_FILE=$CONF_DIR/<%= scope.lookupvar('elasticsearch::params::config_file') %>
<% end -%>

# Additional Java OPTS
#ES_JAVA_OPTS=
